
<% include partials/header %>
<div class="ui main text container segment">
<div class="ui huge header"> <%= blog.title %></div>

<div class="ui top attached">
    <div class="item">
        <img src="/img/<%= blog.image %>" alt="" class="ui centered rounded image">
            <div class="content">
                <span><strong><%= blog.dateCreated.toDateString()%></strong></span>
            </div>
                <div class="description">
                <p class="font"><%-blog.body%></p>
                </div>
                <a href="/blogs/<%=blog._id%>/edit" class="ui blue basic button">Edit Post</a>
                <form  id="delete" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
                <button class="ui red inverted button float-right">Delete Post</button>
                </form>
    </div>
</div>

</div>



<% include partials/footer %>